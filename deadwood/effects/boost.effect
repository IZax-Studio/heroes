					</particle>
				</twopointemitter>
			</template>
			
			<instance name="sparks" bone_a="Bip01 Pelvis" bone_b="Bip01 Head"/>
			<instance name="sparks" bone_a="Bip01 L Clavicle" bone_b="Bip01 L Hand"/>
			<instance name="sparks" bone_a="Bip01 R Clavicle" bone_b="Bip01 R Hand"/>
			<instance name="sparks" bone_a="Bip01 L Thigh" bone_b="Bip01 L Foot"/>
			<instance name="sparks" bone_a="Bip01 R Thigh" bone_b="Bip01 R Foot"/>
			
		</particlesystem>
	</definitions>
	<thread>
		<spawnparticlesystem instance="instance0" particlesystem="system0" />
		<waitfordeath instance="instance0" />
	</thread>
