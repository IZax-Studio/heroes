<?xml version="1.0" encoding="UTF-8"?>
<effect deferred="true">
	<definitions>
		<particlesystem name="system0" space="entity" scale="1">

			<template name="sparks">
				<twopointemitter
					delay="100"
					bone_a="{bone_a}"
					bone_b="{bone_b}"
					offsetsphere="35"
					spawnrate="15"
					particlelife="500"
					minspeed="10"
					maxspeed="50"
					direction="0 0 1"
