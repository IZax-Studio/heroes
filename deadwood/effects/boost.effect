							maxdelay="200"
							offsetsphere="10"
							minlife="100"
							maxlife="250"
							spawnrate="20"
							particlelife="350"
							material="/shared/effects/materials/femme_lightning_01_trail.material"
							texpostime="350"
							texposscale="0"
							texstretchscale="1"
							startparticlecolor="1"
							endparticlecolor="0"
