				<particle 
					minangle="0"
					maxangle="360"
					startcolor="0"
					midcolor="1 1 1"
					endcolor="0 0 0"
					midcolorpos=".2"
					minstartsize="5"
					maxstartsize="10"
					endsize="15"
					startalpha="0"
					midalpha="1"
					endalpha="0"
					midalphapos=".5"
					startanchor="1"
