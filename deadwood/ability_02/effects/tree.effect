					startcolor="0"
					midcolor="1 1 1"
					endcolor="0 0 0"
					midcolorpos=".2"
					minstartsize="5"
					maxstartsize="10"
					endsize="15"
					startalpha="0"
					midalpha="1"
					endalpha="0"
					midalphapos=".5"
					startanchor="1"
					endanchor=".25"
				/>
			</simpleemitter>				
			
			
		</particlesystem>
		
	</definitions>

	<thread>
		<spawnparticlesystem instance="instance0" particlesystem="system0" />
		<spawnparticlesystem instance="instance1" particlesystem="system1" />
		<waitfordeath instance="instance0" />
		<waitfordeath instance="instance1" />
