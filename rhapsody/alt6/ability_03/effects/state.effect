					<billboard
						lockup="1"
						lockright="1"
						yaw="87"
						framespeed="2"
						startcolor="1 0 0"
						endcolor="0"
						directionalspace="local"
						position="-5 10 0"
						bone="_bone_fx_01"
						expirelife="100"
						size="30"
						width="35"
						turn="1"
						depthbias="-30"
						material="/shared/effects/materials/sound_wave.material"
					/>
					
