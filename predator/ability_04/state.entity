	/>
	
	<altavatar key="Hero_Predator.Alt12" modpriority="90"
		passiveeffect="../alt12/ability_04/effects/state_enemy.effect"
	/>
	
	<altavatar key="Hero_Predator.Alt13" modpriority="90"
