							maxscale="1.3"
						/>
					</simpleemitter>
					
					<simpleemitter	
						delay="350"
						count="1"
						
						minparticlelife="250"
						maxparticlelife="350"			
						position="0 0 20"
						material="/shared/effects/materials/refract_ripples.material"
					>
						<particle
							startalpha="1"
							midalpha="1"
							endalpha="0"
							startparam="0.015"
							endparam="0"
							startsize="20"
							endsize="50"
							depthbias="-5"
							lockup="true"
							pitch="90"
							minscale=".8"
							maxscale="1.3"
