				/>
			</simpleemitter>
		
		
		
	
		
		
		
			<groundsprite
				delay="350"
				position="0 0 0"
				expirelife="250"
				material="/shared/effects/materials/black_spot.material"
				size="60"				
				color="1 1 1"
				startalpha="1"
				endalpha="0"
			/>	
		
		

		</particlesystem>
	</definitions>
	<thread>
		<spawnparticlesystem instance="instance0" particlesystem="bridge" />
		  
		<waitfordeath instance="instance0" />
		
		<!-- <die /> -->
	</thread>
