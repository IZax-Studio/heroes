			</simpleemitter>	
		
					<simpleemitter
						delay="350"
						life="500"
						loop="true"
						spawnrate="220"			
						minparticlelife="5500"
						maxparticlelife="5750"
						material="/shared/effects/materials/rain.material"
						offsetsphere="60 60 60"
						depthbias="-75"
						position="0 0 250"
						direction="0 0 -1"
						gravity="50"
						speed="50"
						turn="1"
					>
						<particle 
						
						
							startcolor=".4"
							
							
							maxanglespeed="60"
							startsize="50"
							endsize="85"
							height="8"
							width="4"
							startalpha=".6"
							endalpha="0"
						/>
					</simpleemitter>


		

			
		
			<terrainemitter
				delay="350"
