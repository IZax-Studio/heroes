			</terrainemitter>

			<simpleemitter
				delay="350"
				count="2"
				particlelife="500"
				spawnrate="640"
				gravity="-15"
				direction="0 0 1"
				drag="0.05"
				material="/shared/effects/materials/whitewater_02.material"
				offsetsphere="25 25 10"
			>
				<particle
					minangle="0"
					maxangle="360"
					minanglespeed="-60"
					maxanglespeed="60"
					startsize="30"
