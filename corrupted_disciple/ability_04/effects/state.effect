				falloffstart="200"
				falloffend="1400"
			/>

			<simpleemitter
				delay="500"
				spawnrate="100"
				minparticlelife="1900"
				maxparticlelife="2200"
			
				minspeed="5"
				maxspeed="15"
				drag="0.07"
				mintimenudge="0"
				maxtimenudge="1000"				
				material="/shared/effects/materials/smoke_particle.material"
				offsetsphere="30 30 0"
				position="0 0 300"
				inheritvelocity=".5"
			>
				<particle 
					minangle="0"
					maxangle="360"
					minanglespeed="-45"
					maxanglespeed="45"
					startcolor=".6"
					endcolor=".3"
